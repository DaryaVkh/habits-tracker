<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="goEditHabit"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <TextView
                    android:id="@+id/name_view"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/priority_view"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_view"/>

            <TextView
                    android:id="@+id/description_view"
                    android:minLines="2"
                    android:maxLines="4"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/priority_view"/>

            <TextView
                    android:id="@+id/period_view"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_view"/>

            <TextView
                    android:id="@+id/habit_type"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/times_count"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/time_period"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/priority"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
